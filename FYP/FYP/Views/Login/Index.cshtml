<!DOCTYPE html>
<html lang="en">

<head>
    <title>Hostel Hub Login Form</title>
    <!-- meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="Art Sign Up Form Responsive Widget, Audio and Video players, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates,
		Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design" />
    <!-- /meta tags -->
    <!-- custom style sheet -->
    <link href="~/smartlogin/css/style.css" rel="stylesheet" type="text/css" />
    <!-- /custom style sheet -->
    <!-- fontawesome css -->
    <link href="~/smartlogin/css/fontawesome-all.css" rel="stylesheet" />
    <!-- /fontawesome css -->
    <!-- google fonts-->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- /google fonts-->

</head>


<body>
    <h1>Hostel Hub Login Form</h1>
    <div class=" w3l-login-form">
        <h2>Login Here</h2>
        @using (Html.BeginForm("SignIn", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="w3l-form-group">
                    <label>Email :</label>
                    <div class="group">
                        <i class="fas fa-user"></i>
                        @Html.EditorFor(model => model.U_Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username" } })
                        @Html.ValidationMessageFor(model => model.U_Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="w3l-form-group">
                    <label>Password:</label>
                    <div class="group">
                        <i class="fas fa-unlock"></i>
                        @Html.PasswordFor(model => model.U_Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
                        @Html.ValidationMessageFor(model => model.U_Password, "", new { @class = "text-danger" })
                    </div>
                </div>


                
                <button type="submit">Login</button>
                
            </div>
        }

        

        @if (TempData["Msg"] != null)
        {
            <div class="alert alert-dismissible alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                @TempData["Msg"].ToString()
            </div>


        }
        <p class=" w3l-register-p">Don't have an account?<a onclick="location.href='@Url.Action("Index", "UserRegister")'" class="register"> Register</a></p>
    </div>


</body>

</html>